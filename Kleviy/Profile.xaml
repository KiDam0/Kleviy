<Window x:Class="Kleviy.Profile"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kleviy"
        mc:Ignorable="d"
        Title="Профиль" 

        MouseDown="MovingWin"

        Height="700" Width="400"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Gainsboro">
    <Grid>

        <!--Кнопки шапки-->

        <!--Минимизация-->

        <Button 
         x:Name="MinButton" 
         Content="-" 
         Click="MinButton_Click" 
         HorizontalAlignment="Left" 
         Margin="276,4,0,0" 
         Width="61" 
         Background="White" 
         RenderTransformOrigin="0.55,0.344" 
         Foreground="#DD000000" 
         BorderBrush="{x:Null}" 
         Height="32" 
         VerticalAlignment="Top" />

        <!--Закрытие-->

        <Button 
         x:Name="CloseButton" 
         Content="x" 
         Click="CloseButton_Click" 
         Margin="342,4,0,0" 
         Background="#FFCA4949" 
         RenderTransformOrigin="0.55,0.344" 
         Height="32" 
         VerticalAlignment="Top" 
         HorizontalAlignment="Left" 
         Width="48" 
         BorderBrush="{x:Null}" />
        <Border Background="white"
        BorderBrush="White"
        BorderThickness="1"
        CornerRadius="5,5,5,5" Margin="10,58,10,22">


        </Border>
        <Image
        HorizontalAlignment="Left"
        Name="ProfilePNG"
        Height="164"
        VerticalAlignment="Top"
        Width="164"
        Margin="116,130,0,0"/>
        <Image
        HorizontalAlignment="Left"
        Name="ChangeProfilePNG"
        Height="37"
        VerticalAlignment="Top"
        Width="47"
        Margin="287,244,0,0"/>
        <Button Height="74" 
                HorizontalAlignment="Center" 
                Margin="276,259,0,0" 
                Name="btnOpen" 
                VerticalAlignment="Top" 
                Width="74" 
                Click="btnOpen_Click" ClipToBounds="True" Background="White" BorderBrush="White">
            <Image
                Width="46"
                Height="56"
                Source = "/png/Photo.png" RenderTransformOrigin="0.244,0.532"/>
        </Button>
        <TextBlock TextWrapping="Wrap" Text="Фамилия:" Margin="10,329,200,314" FontFamily="Nirmala UI" FontSize="36" FontWeight="Bold"/>
        <TextBlock TextWrapping="Wrap" x:Name="secondnameText" Text="..." Margin="10,386,167,257" FontFamily="Nirmala UI" FontSize="36"/>
        <TextBlock TextWrapping="Wrap" Text="Имя:" Margin="10,443,221,200" FontFamily="Nirmala UI" FontSize="36" FontWeight="Bold"/>
        <TextBlock TextWrapping="Wrap" x:Name="nameText" Text="..." Margin="10,505,167,138" FontFamily="Nirmala UI" FontSize="36"/>
    </Grid>
</Window>
